{
  "name": "contacts",
  "label": "i18n/contacts.label",
  "recordLabel": "js/recordLabel",
  "settings": {
    "auditLogs": {
      "enabled": true,
      "userContext": {
        "recordCreated": true,
        "recordUpdated": true,
        "recordDeleted": true,
        "actionExecuted": true
      },
      "scriptContext": {
        "recordCreated": true,
        "recordUpdated": true,
        "recordDeleted": true,
        "actionExecuted": true
      }
    }
  },
  "fields": [
    {
      "name": "company",
      "label": "i18n/contacts.company.label",
      "type": "relationship",
      "required": true,
      "targetEntity": "companies",
      "filter": {
        "status": "active"
      }
    },
    {
      "name": "firstName",
      "label": "i18n/contacts.firstName.label",
      "type": "text",
      "required": true
    },
    {
      "name": "lastName",
      "label": "i18n/contacts.lastName.label",
      "type": "text",
      "required": true
    },
    {
      "name": "fullName",
      "label": "i18n/contacts.fullName.label",
      "type": "text",
      "calculation": "js/fullNameFieldCalculation"
    },
    {
      "name": "email",
      "label": "i18n/contacts.email.label",
      "type": "email",
      "required": true,
      "indexable": true,
      "unique": true
    },
    {
      "name": "phoneNumbers",
      "label": "i18n/contacts.phoneNumbers.label",
      "type": "phone",
      "multiplicity": "many"
    },
    {
      "name": "notes",
      "label": "i18n/contacts.notes.label",
      "type": "nested",
      "multiplicity": "many",
      "fields": [
        {
          "name": "date",
          "label": "i18n/contacts.date.label",
          "type": "dateTime",
          "defaultValue": "expressions/currentDate",
          "uiOptions": {
            "readOnly": "always"
          }
        },
        {
          "name": "user",
          "label": "i18n/contacts.user.label",
          "type": "relationship",
          "targetEntity": "sys.users",
          "defaultValue": "js/userFieldDefaultValue",
          "uiOptions": {
            "readOnly": "always"
          }
        },
        {
          "name": "note",
          "label": "i18n/contacts.note.label",
          "type": "text",
          "required": true,
          "uiOptions": {
            "editComponent": "textArea",
            "numberOfRows": 4
          }
        }
      ]
    }
  ],
  "actions": {
    "name": "addNote",
    "label": "i18n/contacts.addNote.label",
    "type": "oneRecord",
    "parameters": [
      {
        "name": "note",
        "label": "i18n/contacts.note.label",
        "type": "text",
        "required": true,
        "uiOptions": {
          "editComponent": "textArea",
          "numberOfRows": 4
        }
      }
    ],
    "actions": "js/addNoteActions"
  }
}