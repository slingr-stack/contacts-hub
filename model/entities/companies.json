{
  "name": "companies",
  "label": "Companies",
  "recordLabel": "fields/name",
  "settings": {
    "auditLogs": {
      "enabled": true,
      "userContext": {
        "recordCreated": true,
        "recordUpdated": true,
        "recordDeleted": true,
        "actionExecuted": true
      },
      "scriptContext": {
        "recordCreated": true,
        "recordUpdated": true,
        "recordDeleted": true,
        "actionExecuted": true
      }
    }
  },
  "fields": [
    {
      "name": "name",
      "label": "Name",
      "type": "text",
      "required": true,
      "indexable": true,
      "unique": true
    },
    {
      "name": "description",
      "label": "Description",
      "type": "text",
      "uiOptions": {
        "editComponent": "textArea",
        "numberOfRows": 4
      }
    },
    {
      "name": "status",
      "label": "Status",
      "type": "choice",
      "choices": [
        {
          "name": "active",
          "label": "Active"
        },
        {
          "name": "inactive",
          "label": "Inactive"
        }
      ],
      "defaultValue": "active",
      "uiOptions": {
        "readOnly": "always"
      }
    },
    {
      "name": "address",
      "label": "Address",
      "type": "nested",
      "fields": [
        {
          "name": "street",
          "label": "Street",
          "type": "text"
        },
        {
          "name": "zipCode",
          "label": "Zip code",
          "type": "integer"
        }
      ]
    }
  ],
  "actions": [
    {
      "name": "activate",
      "label": "Activate",
      "type": "oneRecord",
      "precondition": {
        "status": "inactive"
      },
      "actions": "js/activateActions"
    },
    {
      "name": "deactivate",
      "label": "Deactivate",
      "type": "oneRecord",
      "precondition": {
        "status": "active"
      },
      "actions": "js/deactivateActions"
    }
  ]
}