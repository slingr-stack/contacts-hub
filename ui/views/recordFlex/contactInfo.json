{
  "name": "contactInfo",
  "label": "Contact info",
  "entity": "contacts",
  "type": "readOnly",
  "settings": {
    "fieldLayout": "horizontal"
  },
  "layout": [
    {
      "columns": [
        {
          "width": 4,
          "widgets": [
            {
              "type": "entityField",
              "field": "firstName"
            }
          ]
        },
        {
          "width": 4,
          "widgets": [
            {
              "type": "entityField",
              "field": "lastName"
            }
          ]
        },
        {
          "width": 4,
          "widgets": [
            {
              "type": "header",
              "name": "spacer",
              "label": "Spacer",
              "visible": "never"
            }
          ]
        }
      ]
    },
    {
      "columns": [
        {
          "width": 4,
          "widgets": [
            {
              "type": "entityField",
              "field": "company"
            }
          ]
        },
        {
          "width": 4,
          "widgets": [
            {
              "type": "entityField",
              "field": "email"
            }
          ]
        },
        {
          "width": 4,
          "widgets": [
            {
              "type": "entityField",
              "field": "phoneNumbers"
            }
          ]
        }
      ]
    },
    {
      "columns": [
        {
          "width": 12,
          "widgets": [
            {
              "type": "header",
              "name": "notes",
              "label": "Notes",
              "style": "lineDivider",
              "mainMenu": {
                "name": "headerCustomMenu",
                "type": "group",
                "entries": [
                  {
                    "type": "entityAction",
                    "action": "addNote"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "columns": [
        {
          "width": 12,
          "widgets": [
            {
              "type": "table",
              "name": "notes",
              "label": "Notes",
              "columnsSchema": "dynamic",
              "pagination": {
                "type": "infiniteScrolling",
                "batchSize": 5
              },
              "rows": "js/notesTableRowsCalculation",
              "options": {
                "showLabel": false
              }
            }
          ]
        }
      ]
    }
  ]
}