{
  "name": "companyInfo",
  "label": "Company info",
  "entity": "companies",
  "type": "readOnly",
  "settings": {
    "fieldLayout": "horizontal"
  },
  "layout": [
    {
      "columns": [
        {
          "width": 6,
          "widgets": [
            {
              "type": "entityField",
              "field": "name"
            }
          ]
        },
        {
          "width": 6,
          "widgets": [
            {
              "type": "entityField",
              "field": "status"
            }
          ]
        }
      ]
    },
    {
      "columns": [
        {
          "width": 6,
          "widgets": [
            {
              "type": "entityField",
              "field": "email"
            }
          ]
        },
        {
          "width": 6,
          "widgets": [
            {
              "type": "entityField",
              "field": "website"
            }
          ]
        }
      ]
    },
    {
      "columns": [
        {
          "width": 12,
          "widgets": [
            {
              "type": "header",
              "name": "contacts",
              "label": "Contacts",
              "style": "lineDivider"
            }
          ]
        }
      ]
    },
    {
      "columns": [
        {
          "width": 12,
          "widgets": [
            {
              "type": "table",
              "name": "notes",
              "label": "Notes",
              "columnsSchema": "static",
              "columns": [
                {
                  "field": "fullName",
                  "options": {
                    "sortable": true
                  }
                },
                {
                  "field": "email"
                },
                {
                  "field": "phoneNumbers"
                }
              ],
              "pagination": {
                "type": "perPage",
                "itemsPerPage": 20
              },
              "header": {
                "sticky": true
              },
              "dataSet": {
                "entity": "contacts",
                "filters": {
                    "company": "$currentRecord"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}