{
  "name": "users",
  "label": "Users",
  "entity": "sys.users",
  "settings": {
    "sortField": "fullName",
    "sortDirection": "ascendant"
  },
  "columns": [
    {
      "field": "fullName"
    },
    {
      "field": "email"
    },
    {
      "field": "groups.group",
      "options": {
         "overrideLabel": true,
          "label": "Groups"
      }
    },
    {
      "field": "identityProviders.name",
      "options": {
        "overrideLabel": true,
        "label": "Identity providers"
      }
    },
    {
      "name": "lastLogin",
      "label": "Last login",
      "type": "dateTime",
      "calculation": "js/lastLoginColumnCalculation"
    },
    {
      "name": "fromIp",
      "label": "From IP",
      "type": "text",
      "calculation": "js/fromIpColumnCalculation"
    },
    {
      "name": "connectionStatus",
      "label": "Connection",
      "type": "choice",
      "choices": [
        {
          "name": "online",
          "label": "Online",
          "color": "success"
        },
        {
          "name": "away",
          "label": "Away",
          "color": "warning"
        },
        {
          "name": "offline",
          "label": "Offline"
        }
      ],
      "calculation": "js/connectionStatusColumnCalculation"
    }

  ],
  "crud": {
    "create": {
      "enabled": true,
      "view": "views/userCreate"
    },
    "read": {
      "enabled": true,
      "view": "views/userRead"
    },
    "update": {
      "enabled": true,
      "view": "views/userUpdate"
    },
    "delete": {
      "enabled": true
    }
  }
}
